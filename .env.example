# Backend – required (no defaults in settings):
SECRET_KEY=your_django_secret_key
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1,backend

# PostgreSQL (required for backend)
POSTGRES_HOST=localhost
POSTGRES_DB=stocksense
POSTGRES_USER=stocksense
POSTGRES_PASSWORD=your_secure_password
ENABLE_ML_FUNCTIONS=false
POSTGRES_PORT=5432
# Use mock stock/crypto data (no external API). For local dev when you don't need live data.
#USE_MOCK_DATA_FETCHER=true

# Optional – required only if you use live APIs for market prices, news and economic calendar (skip when USE_MOCK_DATA_FETCHER=true for stock/crypto/FX):
#ALPHAVANTAGE_API_KEY=your_alpha_vantage_key
#NEWSDATA_API_KEY=your_newsdata_key

# For frontend (Docker) – API proxy target:
VITE_PROXY_TARGET=http://backend:8000
